<div id='peeps'>
  <% if @peeps %>
    <% @peeps.reverse.each do |peep| %>
      <li> <%=peep.message%> </li>
      <li> User: <%=peep.user.name%> </li>
      <li> Handle: <%=peep.user.username%> </li>
      <li> Time Posted: <%=peep.created_at.strftime('%F %H:%M:%S')%> </li>
      <%if session["user_id"] %>
        <li id='reply'>
             <form action='peeps/makereply' method='post'>
                <input type='hidden' name='original_id' value='<%=peep.id%>'>
                <input type='submit' value='Reply?'>
              </form>
        </li>
      <%end%>
    <%end%>
  <%end%>
</div>